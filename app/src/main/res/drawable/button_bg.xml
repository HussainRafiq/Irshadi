<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item android:state_pressed="false">
    <shape>
        <gradient android:startColor="#c69048" android:centerColor="#c59048" android:endColor="#c56908"></gradient>
  <corners android:radius="5dp"></corners>
    </shape>
</item>
    <item android:state_pressed="true">
        <shape>
            <gradient android:startColor="#c69048" android:angle="180" android:centerColor="#c59048" android:endColor="#c56908"></gradient>
            <corners android:radius="5dp"></corners>
        </shape>
    </item>

</selector>