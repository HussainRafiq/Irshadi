<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".login">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:id="@+id/head"
                android:text="Verify +923322081274"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="25dp"
        android:textAlignment="center"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="15dp"
        android:id="@+id/disc"

        android:layout_marginStart="15dp"
        android:text="Waiting to automatically detect an SMS sent to +923322081274."
android:textColor="@android:color/black"
        android:textSize="15dp"
        android:textAlignment="center"
 />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:text="Wrong Number ?"
android:clickable="true"
        android:id="@+id/link"
        android:textColor="@android:color/holo_blue_bright"
        android:textSize="12dp"
        android:textAlignment="center"

        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:textSize="20dp"
        android:layout_margin="20dp"
        android:hint="6 Digit Code"
        android:inputType="number"
        android:maxLength="6"
        android:id="@+id/code"
        android:textAlignment="center"
        android:tooltipText="CODE"
        android:layout_height="50dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
android:textAlignment="textStart"
        android:text="Resend SMS"
        android:id="@+id/btn"
        android:drawableTint="@color/colorPrimaryDark"
        android:background="@android:color/white"
        android:textColor="@color/colorPrimaryDark"
        android:drawableEnd="@drawable/ic_message_black_24dp"
        android:textSize="20dp"
        />

</LinearLayout>